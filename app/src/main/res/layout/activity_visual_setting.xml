<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="32"
    android:orientation="vertical"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_setting_phone"
            android:layout_width="23.5dp"
            android:layout_height="23.5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_set_phone" />

        <TextView
            android:id="@+id/txt_setting_phone"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignStart="@id/icon_setting_phone"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="8dp"
            android:text="智慧手環"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="21.5dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:background="#DDDDDD" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:paddingLeft="53dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_set_vibrate_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="調整手環聲音大小"
            android:textColor="#000000"
            android:textSize="15sp" />

        <RadioGroup
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:id="@+id/rdo_grp_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdo_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:onClick="OnRadioClick"
                android:text="弱"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rdo_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:onClick="OnRadioClick"
                android:text="中"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rdo_strong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:onClick="OnRadioClick"
                android:text="強"
                android:textSize="15sp" />

        </RadioGroup>

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_setting_glass"
            android:layout_width="23.5dp"
            android:layout_height="23.5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_set_glass" />

        <TextView
            android:id="@+id/txt_setting_glass"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignStart="@id/icon_setting_phone"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="8dp"
            android:text="智慧眼鏡"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="21.5dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:background="#DDDDDD" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:paddingLeft="53dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="調整前方偵測距離"
            android:textColor="#000000"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/seekBar_glass_front"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="128.5dp"
            android:max="350" />

        <TextView
            android:id="@+id/txt_glass_front_threshold_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/threshold"
            android:text="0"
            android:textColor="#FF0000FF"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:paddingLeft="53dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="調整側邊偵測距離"
            android:textColor="#000000"
            android:textSize="15sp" />

        <SeekBar
            android:id="@+id/seekBar_glass_side"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="128.5dp"
            android:max="350" />

        <TextView
            android:id="@+id/txt_glass_side_threshold_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/threshold"
            android:text="0"
            android:textColor="#FF0000FF"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:layout_weight="12">

        <Button
            android:contentDescription="系統重置"
            android:background="#0047b2"
            android:text="系統重置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="bottom" />
    </LinearLayout>


</LinearLayout>