<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntust.jojllman.wearableapplication.BraceletControlActivity"
    android:background="#000000"
    android:weightSum="3">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:contentDescription="@string/btn_bracelet_color"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_with_border_new"
        android:id="@id/layout_bracelet_color"
        android:onClick="OnBraceletMenuClick"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/btn_bracelet_color"
            android:textSize="@dimen/font_size_mid"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:contentDescription="@string/btn_bracelet_distance"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_with_border_new"
        android:id="@id/layout_bracelet_distance"
        android:onClick="OnBraceletMenuClick"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/btn_bracelet_distance"
            android:textSize="@dimen/font_size_mid"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:contentDescription="@string/btn_bracelet_search"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_with_border_new"
        android:id="@id/layout_bracelet_search"
        android:onClick="OnBraceletMenuClick"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/btn_bracelet_search"
            android:textSize="@dimen/font_size_mid"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</LinearLayout>
