<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_setting"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntust.jojllman.wearableapplication.AppManageActivity"
    android:background="#ffffff"
    android:weightSum="10">

    <Button
        android:contentDescription="@string/btn_search_device"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/btn_search_device"
        android:text="@string/btn_search_device"
        android:textSize="@dimen/btn_font_size"
        android:onClick="OnSearchDeviceClick"
        android:background="@drawable/button_with_border"
        android:layout_weight="5" />

    <Button
        android:contentDescription="@string/btn_app_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/btn_app_setting"
        android:text="@string/btn_app_setting"
        android:textSize="@dimen/btn_font_size"
        android:onClick="OnAppSettingClick"
        android:background="@drawable/button_with_border"
        android:layout_weight="5" />

</LinearLayout>
