<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntust.jojllman.wearableapplication.VisualSupportActivity"
    android:background="#ffffff"
    android:weightSum="12">

    <ImageButton
        android:contentDescription="@string/visual_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/img_btn_visual_glass"
        android:src="@drawable/img_btn_eye_selector"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/button_with_border"
        android:onClick="OnDeviceClick"
        android:layout_weight="5"/>

    <ImageButton
        android:contentDescription="@string/visual_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/img_btn_visual_bracelet"
        android:src="@drawable/img_btn_eye_selector"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/button_with_border"
        android:onClick="OnDeviceClick"
        android:layout_weight="5"/>

    <Button
        android:contentDescription="@string/btn_help"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/btn_help"
        android:text="@string/btn_help"
        android:textSize="@dimen/btn_font_size"
        android:onClick="OnHelpClick"
        android:background="@drawable/button_with_border"
        android:layout_weight="2"/>
</LinearLayout>
