<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntust.jojllman.wearableapplication.ChooseClassActivity"
    android:background="#ffffff"
    android:weightSum="10">

    <ImageButton
        android:contentDescription="哈囉，你好嗎"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_btn_visual"
        android:src="@drawable/img_btn_eye_selector"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/button_with_border"
        android:onClick="OnVisualClick"
        android:layout_weight="4"/>

    <ImageButton
        android:contentDescription="衷心感謝"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:id="@+id/img_btn_hearing"
        android:src="@drawable/img_btn_ear_selector"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/button_with_border"
        android:onClick="OnHearingClick"
        android:layout_weight="4"/>

    <Button
        android:contentDescription="@string/btn_help"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_help"
        android:text="@string/btn_help"
        android:textSize="@dimen/btn_font_size"
        android:onClick="OnHelpClick"
        android:background="@drawable/button_with_border"
        android:layout_weight="2"/>
</LinearLayout>
