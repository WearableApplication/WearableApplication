<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntust.jojllman.wearableapplication.ChooseClassActivity"
    android:background="#000000"
    android:weightSum="10">

    <Button
        android:contentDescription="@string/visual_button"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/img_btn_visual"
        android:drawableRight="@drawable/scale_eye"
        android:adjustViewBounds="true"
        android:text="視覺輔助"
        android:paddingLeft="26dp"
        android:drawablePadding="-280dp"
        android:background="#0047b2"
        android:onClick="OnVisualClick"
        android:layout_weight="10"
        android:textSize="50sp"
        android:textColor="#ffffff"/>


    <Button
        android:contentDescription="@string/btn_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_help"
        android:text="@string/btn_help"
        android:textSize="@dimen/btn_font_size"
        android:onClick="OnHelpClick"
        android:background="@drawable/button_with_border_new"
        android:layout_weight="0"
        android:textColor="#FFFFFF"/>
</LinearLayout>
