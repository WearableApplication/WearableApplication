<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.edu.ntust.jojllman.wearableapplication.ChooseClassActivity"
    android:background="#ffffff">

    <ImageButton
        android:contentDescription="哈囉，你好嗎"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_btn_eye"
        android:src="@drawable/img_btn_eye_selector"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="#00ffffff" />

    <ImageButton
        android:contentDescription="衷心感謝"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:id="@+id/img_btn_ear"
        android:src="@drawable/img_btn_ear_selector"
        android:layout_below="@id/img_btn_eye"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="#00ffffff" />

    <Button
        android:contentDescription="@string/str_help"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_help"
        android:textSize="@dimen/btn_font_size"
        android:layout_alignParentBottom="true"
        android:onClick="OnHelpClick"
        android:background="#ffffffff" />
</RelativeLayout>
